<resources>
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="bottomSheetDialogTheme">@style/BottomSheetDialogTheme</item>

        <item name="materialAlertDialogTheme">@style/DialogTheme</item>
        <item name="textAppearanceButton">@style/ButtonTextAppearance</item>

        <item name="textAppearanceBody1">@style/TextAppearanceBody1</item>
    </style>

    <style name="SetupTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="textAppearanceButton">@style/ButtonTextAppearance</item>
    </style>

    <style name="SplashScreenTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_screen_background</item>
    </style>

    <style name="TextAppearanceBody1" parent="TextAppearance.MaterialComponents.Body1">
        <item name="fontFamily">@font/cabin_regular</item>
    </style>

    <style name="Widget.BottomNavigationView" parent="Widget.Design.BottomNavigationView">
        <item name="fontFamily">@font/cabin_regular</item>
    </style>

    <style name="NavigationTab" parent="Widget.MaterialComponents.TabLayout">
        <item name="tabBackground">@color/tabLayoutColor</item>
        <item name="tabSelectedTextColor">@color/homeworkColor</item>
        <item name="fontFamily">@font/cabin_bold</item>
        <item name="tabIndicatorColor">@color/homeworkColor</item>
        <item name="tabTextAppearance">@style/NavigationTabTextAppeareance</item>
    </style>

    <style name="NavigationTabTextAppeareance" parent="TextAppearance.Design.Tab">
        <item name="android:textColor">@android:color/black</item>
        <item name="textAllCaps">false</item>
        <item name="android:textAllCaps">false</item>
        <item name="fontFamily">@font/cabin_regular</item>
    </style>

    <style name="FullScreenDialog" parent="AppTheme">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">false</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:statusBarColor">?android:colorBackground</item>
    </style>

    <style name="DialogAnimation">
        <item name="android:windowEnterAnimation">@anim/fade_slide_up</item>
        <item name="android:windowExitAnimation">@anim/fade_slide_down</item>
    </style>

    <style name="BottomSheetDialogTheme" parent="Theme.MaterialComponents.DayNight.BottomSheetDialog">
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowSoftInputMode">adjustResize</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="bottomSheetStyle">@style/BottomSheetRoundedCorners</item>
    </style>

    <style name="BottomSheetRoundedCorners" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/bottom_sheet_rounded_corners</item>
    </style>

    <style name="ChipTextRegular" parent="TextAppearance.MaterialComponents.Chip">
        <item name="android:fontFamily">@font/cabin_regular</item>
    </style>

    <style name="ChipTextBold" parent="TextAppearance.MaterialComponents.Chip">
        <item name="android:fontFamily">@font/cabin_bold</item>
    </style>

    <style name="DialogTheme" parent="ThemeOverlay.MaterialComponents.MaterialAlertDialog">
        <item name="materialAlertDialogTitleTextStyle">@style/DialogTitleText</item>
        <item name="materialAlertDialogBodyTextStyle">@style/DialogBodyText</item>
        <item name="buttonBarPositiveButtonStyle">@style/DialogButton</item>
        <item name="buttonBarNegativeButtonStyle">@style/DialogButton</item>
    </style>

    <style name="DialogTitleText" parent="MaterialAlertDialog.MaterialComponents.Title.Text">
        <item name="fontFamily">@font/cabin_bold</item>
    </style>

    <style name="DialogBodyText" parent="TextAppearance.MaterialComponents.Body2">
        <item name="fontFamily">@font/cabin_regular</item>
    </style>

    <style name="DialogButton" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="fontFamily">@font/cabin_bold</item>
    </style>

    <style name="ButtonTextAppearance" parent="TextAppearance.MaterialComponents.Button">
        <item name="fontFamily">@font/cabin_medium</item>
    </style>

    <style name="InputTextTextAppearance" parent="TextAppearance.MaterialComponents.Subtitle1">
        <item name="fontFamily">@font/cabin_regular</item>
    </style>

    <style name="TextFieldHintTextAppearance" parent="TextAppearance.MaterialComponents.Caption">
        <item name="fontFamily">@font/cabin_regular</item>
    </style>

    <style name="TextFieldHelperTextTextAppearance" parent="TextAppearance.MaterialComponents.Caption">
        <item name="fontFamily">@font/cabin_regular</item>
    </style>

    <style name="TextFieldErrorTextAppearance" parent="TextAppearance.MaterialComponents.Caption">
        <item name="fontFamily">@font/cabin_regular</item>
    </style>

    <style name="NavigationViewItemTextAppearance" parent="TextAppearance.MaterialComponents.Body2">
        <item name="fontFamily">@font/cabin_regular</item>
    </style>

</resources>