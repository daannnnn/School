<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.fragments.setup.SetupViewPagerFragment">

    <androidx.viewpager.widget.ViewPager
        android:id="@+id/setupViewPager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/setupTabLayout"/>

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/setupTabLayout"
        android:layout_width="match_parent"
        android:layout_above="@id/buttonDoneSkip"
        android:layout_height="wrap_content"
        app:tabBackground="@drawable/setup_tab_selector"
        app:tabGravity="center"
        app:tabIndicatorHeight="0dp" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/Widget.MaterialComponents.Button.TextButton"
        android:id="@+id/buttonDoneSkip"
        android:textSize="18sp"
        android:fontFamily="@font/cabin_medium"
        android:layout_alignParentBottom="true"/>

</RelativeLayout>